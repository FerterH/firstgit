class Person:
    def __init__(self, name, age, city):
        self.name = name
        self.age = age
        self.city = city
    def name_info(self):
        print('Привет, меня зовут', self.name)
    def age_info(self):
        print('Мне', self.age)
    def city_info(self):
        print('Я из города', self.city)

class Maths:
    def __init__(self, a, b):
        self.a = a
        self.b = b
    def summa(self):
        otvet = self.a + self.b
        print(otvet)
